@{
}

@model StudentPortalWeb.Models.Entities.Student

<h1>Edit Student</h1>
@if(Model is null)
{
    <p>No Student found with this Id</p>
}
else{

<form method="post">
    <div class="mt-3">
        <label class="form-label" for="id">Id</label>
        <input type="text" id="id" class="form-control" asp-for="Id" readonly />
    </div>
    <div class="mt-3">
        <label class="form-label" for="name">Name</label>
        <input type="text" id="name" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label" for="email">Email</label>
        <input type="email" id="email" class="form-control" asp-for="Email" />
    </div>

    <div class="mt-3">
        <label class="form-label" for="phone">Phone</label>
        <input type="text" id="phone" class="form-control" asp-for="Phone" />
    </div>
    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="subscribed" asp-for="Subscribed" />
        <label for="subscribed" class="form-check-label">Subscribed</label>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Edit</button>
        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Students">Delete</button>

    </div>
</form>
}